---
interface Props {
  date?: string;
  content: string;
}

const { date = '', content } = Astro.props;
---

<div class="terminal-card">
  <div class="terminal-header">
    <div class="terminal-buttons">
      <span class="btn red"></span>
      <span class="btn yellow"></span>
      <span class="btn green"></span>
    </div>
  </div>
  <div class="terminal-body">
    {date && <p class="terminal-date">{date}</p>}
    <p class="terminal-content">{content}</p>
  </div>
</div>

<style>
  .terminal-card {
    background: var(--color-black);
    border-radius: 0.75rem;
    overflow: hidden;
    max-width: 550px;
    width: 100%;
  }

  .terminal-header {
    background: #c4c4c4;
    padding: 0.75rem 1rem;
  }

  .terminal-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .btn {
    width: 14px;
    height: 14px;
    border-radius: 50%;
  }

  .btn.red {
    background: #ff5f57;
  }

  .btn.yellow {
    background: #febc2e;
  }

  .btn.green {
    background: #28c840;
  }

  .terminal-body {
    padding: 1.5rem;
    color: var(--color-white);
    font-family: var(--font-mono);
  }

  .terminal-date {
    text-align: right;
    font-size: 0.85rem;
    margin-bottom: 1rem;
    opacity: 0.8;
  }

  .terminal-content {
    font-size: 0.95rem;
    line-height: 1.7;
  }

  @media (max-width: 768px) {
    .terminal-card {
      max-width: 100%;
    }

    .terminal-body {
      padding: 1rem;
    }

    .terminal-content {
      font-size: 0.85rem;
    }
  }
</style>
