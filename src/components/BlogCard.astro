---
interface Props {
  title: string;
  date: string;
  tags: string[];
  slug: string;
  image?: string;
}

const { title, date, tags, slug, image } = Astro.props;
---

<article class="blog-card">
  <a href={`/blog/${slug}`} class="blog-card-link">
    <div class="blog-card-image">
      {image ? (
        <img src={image} alt={title} />
      ) : (
        <div class="image-placeholder"></div>
      )}
    </div>
    <div class="blog-card-content">
      <h2 class="blog-card-title">{title}</h2>
      <time class="blog-card-date">{date}</time>
      <div class="blog-card-tags">
        {tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </div>
  </a>
</article>

<style>
  .blog-card {
    display: block;
  }

  .blog-card-link {
    display: flex;
    gap: 1.5rem;
    text-decoration: none;
    color: inherit;
  }

  .blog-card-image {
    flex-shrink: 0;
    width: 150px;
    height: 100px;
  }

  .blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.5rem;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background: var(--color-gray);
    border-radius: 0.5rem;
  }

  .blog-card-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .blog-card-title {
    font-family: var(--font-mono);
    font-size: 1rem;
    font-weight: normal;
    margin: 0;
  }

  .blog-card-date {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .blog-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .blog-card-image {
      width: 100px;
      height: 70px;
    }

    .blog-card-tags .tag {
      font-size: 0.65rem;
      padding: 0.2rem 0.5rem;
    }
  }
</style>
